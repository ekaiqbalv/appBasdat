<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailHotelActivity">
    <ImageView
        android:id="@+id/iv_hotel_gambar_detail"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/hotel1"/>
    <LinearLayout
        android:id="@+id/ll_hotel_informasi"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_hotel_gambar_detail"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_hotel_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hotel Everyday"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/tv_hotel_bintang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Bintang 3"
            android:textStyle="bold"
            android:textColor="#f4d004"/>
        <LinearLayout
            android:id="@+id/ll_hotel_lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location_grey"/>
            <TextView
                android:id="@+id/tv_hotel_lokasi_kota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Batu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=", "/>
            <TextView
                android:id="@+id/tv_hotel_lokasi_kabupaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawa Timur"/>
        </LinearLayout>
        <View
            android:background="#e4e7ed"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi Hotel"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deskripsiHotel"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fasilitas Hotel"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fasilitasHotel"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/b_hotel_pilih_kamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Kamar"
        android:background="#ffca00"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>