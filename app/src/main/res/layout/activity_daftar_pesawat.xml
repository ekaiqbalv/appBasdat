<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarPesawat"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_pesawat_cari_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menampilkan hasil pencarian " />
        <TextView
            android:id="@+id/tv_pencarian_kotaAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Malang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "/>
        <TextView
            android:id="@+id/tv_pencarian_kotaTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Jakarta"/>
    </LinearLayout>
    <View
        android:id="@+id/v_pesawat_cari_garis"
        android:background="#e4e7ed"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_pesawat_cari_hasil"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Layout_rv_pesawat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/v_pesawat_cari_garis"
        app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>