<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <!-- A CardView that contains a TextView -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_layout_pesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_namaMaskapai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garuda Indonesia"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/iv_logoMaskapai"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/garuda"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_access_time"/>
                    <TextView
                        android:id="@+id/tv_waktuBerangkat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="08:25"/>
                    <TextView
                        android:id="@+id/tv_bandaraAsal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="CGK"/>
                </LinearLayout>
                <View
                    android:background="#bec2ca"
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_access_time"/>
                    <TextView
                        android:id="@+id/tv_waktuSampai"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="10:00"/>
                    <TextView
                        android:id="@+id/tv_bandaraTujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="MLG"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagasi "/>
                <TextView
                    android:id="@+id/tv_bagasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Harga per orang"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#f46e00"/>
                <TextView
                    android:id="@+id/tv_hargaPesawat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="800000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#f46e00"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/rounded_view"
                android:text="PILIH"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:gravity="center"/>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <View
        android:background="#e4e7ed"
        android:layout_width="match_parent"
        android:layout_height="3dp"/>
</LinearLayout>