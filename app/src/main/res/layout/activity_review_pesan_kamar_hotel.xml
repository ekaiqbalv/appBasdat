<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewPesanKamarHotelActivity"
    android:background="#e6eaed">

    <TextView
        android:id="@+id/tv_hotel_detail_pesanan_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Data Kamar"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#394152"/>
    <LinearLayout
        android:id="@+id/ll_hotel_data_kamar_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hotel_detail_pesanan_review"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_reviewKamar_namaHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotel Everyday"
            android:textSize="16sp"
            android:textColor="#394152"/>
        <View
            android:background="#e4e7ed"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Durasi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Kamar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tamu"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="70dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_reviewKamar_durasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Malam"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_reviewKamar_namaKamar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Deluxe Room"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Maksimal "/>
                    <TextView
                        android:id="@+id/tv_reviewKamar_maksTamu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Tamu"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_hotel_data_pemesan_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Data Pemesan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#394152"
        app:layout_constraintTop_toBottomOf="@id/ll_hotel_data_kamar_review"/>
    <LinearLayout
        android:id="@+id/ll_hotel_data_pemesan_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_hotel_data_pemesan_review"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pemesan"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_reviewKamar_namaPemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Nama"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Isi nama sesuai KTP/Paspor/SIM"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Handphone"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_reviewKamar_nomorHpPemesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Nomor"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Email"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_reviewKamar_emailPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Email"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/ll_hotel_data_pemesan_review">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Total Biaya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#394152"/>
        <TextView
            android:id="@+id/tv_reviewKamar_durasi_hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/tv_hotel_simbol_kali_review"
            android:layout_marginRight="10dp"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_hotel_simbol_kali_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/ll_reviewKamar_biaya"
            android:layout_marginRight="10dp"
            android:text="x"/>
        <LinearLayout
            android:id="@+id/ll_reviewKamar_biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "/>
                <TextView
                    android:id="@+id/tv_reviewKamar_harga_hitung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "/>
                <TextView
                    android:id="@+id/tv_reviewKamar_harga_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/b_hotel_detail_pesanan_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffca00"
        android:text="Lanjut Pembayaran"/>

</android.support.constraint.ConstraintLayout>