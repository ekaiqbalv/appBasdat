<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DaftarHotelActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_pesawat_cari_hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menampilkan hasil pencarian anda"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"/>
    <View
        android:id="@+id/v_pesawat_cari_garis"
        android:background="#e4e7ed"
        android:layout_height="3dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pesawat_cari_hasil"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Layout_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/v_pesawat_cari_garis"
        app:layout_constraintBottom_toBottomOf="parent">
    </android.support.v7.widget.RecyclerView>
</android.support.constraint.ConstraintLayout>