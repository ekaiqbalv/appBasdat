<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PesananAktifFragment">

    <LinearLayout
        android:id="@+id/ll_pesanAktif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#fff"
        android:orientation="vertical">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_aktif_namaPemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eka Iqbal Virgiawan"
                    android:textColor="#000"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dipesan melalui Pesenin"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="8dp"
                android:background="@drawable/rounded_view_hijau"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="ID Transaksi #"
                    android:textColor="#fff"/>
                <TextView
                    android:id="@+id/tv_aktif_idTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="1"
                    android:textColor="#fff"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
        <View
            android:background="#e4e7ed"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_aktif_namaPesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Hotel Everyday"
                android:textColor="#000"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_aktif_lokasiAtauJam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="#000"
                android:text="Lowokwaru, Malang"/>
            <TextView
                android:id="@+id/tv_deskripsi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_aktif_namaPesanan"
                android:text="Deluxe Room"/>
            <TextView
                android:id="@+id/tv_deskripsi2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Maksimal 2 Tamu"
                app:layout_constraintTop_toBottomOf="@id/tv_deskripsi1" />
            <TextView
                android:id="@+id/tv_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_aktif_lokasiAtauJam"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="12sp"
                android:text="23/12/2018"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_deskripsi1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#f46e00"/>
                <TextView
                    android:id="@+id/tv_aktif_hargaPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="900.000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#f46e00"/>
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
    <View
        android:background="#e4e7ed"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_pesanAktif"/>
</android.support.constraint.ConstraintLayout>