<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MetodePembayaranPesawatActivity"
    android:background="#e6eaed">
    <TextView
        android:id="@+id/tv_totaltagihanPesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Tagihan"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#394152"/>
    <LinearLayout
        android:id="@+id/ll_totaltagihan_angkaPesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_totaltagihanPesawat">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Rp "/>
        <TextView
            android:id="@+id/tv_totaltagihan_angkaPesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="300000"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_informasipembayaranPesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informasi Pembayaran"
        app:layout_constraintTop_toBottomOf="@+id/ll_totaltagihan_angkaPesawat"
        android:padding="10dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#394152"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tv_informasipembayaranPesawat"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="#fff">
        <TextView
            android:id="@+id/tv_namabankPesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Bank"
            android:textColor="#404040"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>
        <Spinner
            android:id="@+id/spinner_bankPesawat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_nopemilikrekeningPesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Pemilik Rekening"
            android:textColor="#404040"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/et_nopemilikrekeningPesawat"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="Masukkan Nomor Rekening Anda"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_namapemilikrekeningPesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemilik Rekening"
            android:textColor="#404040"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/et_namapemilikrekeningPesawat"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:hint="Masukkan Nama Anda"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/tv_penjelasanmetodepembayaran1Pesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jika melalui Teller, isi Nama Pemilik Rekening dengan nama Penyetor dan Nomor Rekening dengan 0000"
            android:textSize="14dp"
            android:paddingBottom="5dp"/>
        <TextView
            android:id="@+id/tv_penjelasanmetodepembayaran2Pesawat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demi keamanan transaksi Anda, pastikan untuk tidak menginformasikan data pembayaran kepada pihak manapun kecuali kepada Pesenin."
            android:textSize="14dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/b_metode_pembayaranPesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lanjut"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffca00"/>

</android.support.constraint.ConstraintLayout>