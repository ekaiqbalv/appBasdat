<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesanTiketPesawatActivity"
    android:background="#e6eaed">

    <TextView
        android:id="@+id/tv_pesanPesawat_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Data Pesawat"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#394152"/>
    <LinearLayout
        android:id="@+id/ll_pesanPesawat_data_pesawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pesanPesawat_detail"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/ll_info_maskapai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_pesanPesawat_namaMaskapai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garuda Indonesia"
                android:textColor="#000"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/iv_pesanPesawat_logoMaskapai"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/tv_pesanPesawat_namaMaskapai"
                android:src="@drawable/ic_pesawat"/>
            <TextView
                android:id="@+id/tv_pesanPesawat_waktuBerangkat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toLeftOf="@+id/iv_plane"
                android:text="08:20"/>
            <ImageView
                android:id="@+id/iv_plane"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                app:layout_constraintRight_toLeftOf="@+id/tv_pesanPesawat_waktuSampai"
                android:src="@drawable/ic_plane"/>
            <TextView
                android:id="@+id/tv_pesanPesawat_waktuSampai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                app:layout_constraintRight_toRightOf="parent"
                android:text="10:20"/>
        </android.support.constraint.ConstraintLayout>
        <View
            android:background="#e4e7ed"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tanggal Berangkat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Bandara Asal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Bandara Tujuan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_pesanPesawat_tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="24/12/2018"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_pesanPesawat_bandaraAsal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="CGK"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "/>
                    <TextView
                        android:id="@+id/tv_pesanPesawat_terminalAsal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Terminal 3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_pesanPesawat_bandaraTujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="SUB"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "/>
                    <TextView
                        android:id="@+id/tv_pesanPesawat_terminalTujuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Terminal 1"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_pesanPesawat_data_pemesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Data Pemesan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#394152"
        app:layout_constraintTop_toBottomOf="@id/ll_pesanPesawat_data_pesawat"/>
    <LinearLayout
        android:id="@+id/ll_pesanPesawat_data_pemesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_pesanPesawat_data_pemesan"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#fff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Pemesan"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_pesanPesawat_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Nama"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Isi nama sesuai KTP/Paspor/SIM"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Handphone"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_pesanPesawat_noHp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Nomor"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat Email"
            android:layout_marginTop="5dp"
            android:textSize="14sp"/>
        <EditText
            android:id="@+id/et_pesanPesawat_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:background="@null"
            android:hint="Masukkan Email"/>
        <View
            android:background="#cccecd"
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:background="#fff"
        app:layout_constraintTop_toBottomOf="@id/ll_pesanPesawat_data_pemesan">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Total Biaya"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#394152"/>
        <TextView
            android:id="@+id/tv_pesanPenumpang_hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/tv_pesanPesawat_simbol_kali"
            android:layout_marginRight="10dp"
            android:text="1"/>
        <TextView
            android:id="@+id/tv_pesanPesawat_simbol_kali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/ll_pesanPesawat_biaya"
            android:layout_marginRight="10dp"
            android:text="x"/>
        <LinearLayout
            android:id="@+id/ll_pesanPesawat_biaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "/>
                <TextView
                    android:id="@+id/tv_pesanPesawat_harga_hitung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp "/>
                <TextView
                    android:id="@+id/tv_pesanPesawat_harga_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300.000"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    <Button
        android:id="@+id/b_pesanPesawat_detail_pesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#ffca00"
        android:text="Lanjut"/>

</android.support.constraint.ConstraintLayout>